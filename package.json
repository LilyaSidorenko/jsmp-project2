{
  "name": "es6-karma-jasmine-webpack-istanbul-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for ES6 client-based library. Uses Babel and webpack for transpiling and building, Karma and Jasmine for unit testing, and Istanbul for code coverage.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcroitoru/es6-karma-jasmine-webpack-istanbul-boilerplate"
  },
  "scripts": {
    "test": "karma start karma.conf.js",
    "lint": "eslint ./frontend/js",
    "start": "start http://localhost:8000/ & webpack-dev-server",
    "build:dev": "webpack --config webpack.dev.config.js",
    "build:prod": "webpack --config webpack.prod.config.js",
    "build": "npm run build:dev",
    "coverage": "karma start --single-run --no-auto-watch --coverage=true || echo done"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "es6",
    "babel",
    "webpack",
    "webpack 2",
    "jasmine",
    "karma",
    "istanbul",
    "boilerplate"
  ],
  "author": "Denis Croitoru",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "node-sass": "^4.5.2",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.1.0"
  }
}
